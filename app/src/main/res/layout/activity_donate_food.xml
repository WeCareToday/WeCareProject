<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activities.DonateFoodActivity">

    <!-- EditText for entering the available food items -->

    <EditText
        android:id="@+id/donateZipcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/zipCodeforDonation"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactEmailEditText" />

    <EditText
        android:id="@+id/availableFoodItemsEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Available Food Items"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CheckBox for indicating if the user is willing to deliver -->
    <CheckBox
        android:id="@+id/isWillingToDeliverCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Willing to Deliver"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/availableFoodItemsEditText"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- CheckBox for indicating if the food is available for pickup -->
    <CheckBox
        android:id="@+id/isAvailableForPickupCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available for Pickup"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/isWillingToDeliverCheckBox"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- EditText for entering the contact email -->
    <EditText
        android:id="@+id/contactEmailEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Contact Email"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/isAvailableForPickupCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button to submit the form -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donateZipcode" />
</androidx.constraintlayout.widget.ConstraintLayout>
